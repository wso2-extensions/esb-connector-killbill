<template xmlns="http://ws.apache.org/ns/synapse" name="searchInvoice">
    <parameter name="searchKey" description="The search key for the search."/>
    <parameter name="offset" description="The offset of the search."/>
    <parameter name="limit" description="The limit of the search."/>
    <parameter name="withItems" description="Specify true  get the items."/>
    <parameter name="audit" description="The audit level of the invoice."/>
    <sequence>
        <property name="uri.var.searchKey" expression="$func:searchKey"/>
        <property name="offset" expression="$func:offset"/>
        <property name="limit" expression="$func:limit"/>
        <property name="withItems" expression="$func:withItems"/>
        <property name="audit" expression="$func:audit"/>
        <script language="js">
            <![CDATA[
                var offset = mc.getProperty("offset");
                var limit = mc.getProperty("limit");
                var withItems = mc.getProperty("withItems");
                var audit = mc.getProperty("audit");

                var urlQuery = '';
                if (offset != null && offset != ""){
                   urlQuery += 'offset=' + offset + '&';
                }
                if (limit != null && limit != ""){
                   urlQuery += 'limit=' + limit + '&';
                }
                if (withItems != null && withItems != ""){
                   urlQuery += 'withItems=' + withItems + '&';
                }
                if (audit != null && audit != ""){
                   urlQuery += 'audit=' + audit + '&';
                }
                if (urlQuery != null && urlQuery != ""){
                   urlQuery = '?' + urlQuery.toString().substring(0, urlQuery.toString().lastIndexOf("&"));
                }
                mc.setProperty('uri.var.urlQuery',urlQuery);
            ]]>
        </script>
        <filter source="$ctx:killbill.blocking" regex="true">
            <then>
                <call blocking="true">
                    <endpoint>
                        <http method="get"
                              uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/kb/invoices/search/{uri.var.searchKey}{+uri.var.urlQuery}"/>
                    </endpoint>
                </call>
            </then>
            <else>
                <call>
                    <endpoint>
                        <http method="get"
                              uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/kb/invoices/search/{uri.var.searchKey}{+uri.var.urlQuery}"/>
                    </endpoint>
                </call>
            </else>
        </filter>
    </sequence>
</template>
